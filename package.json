{
  "name": "punto-de-venta",
  "description": "Aplicacion Punto de venta para papeleria Pincelin",
  "author": "Equipo Lambda - IS 2022",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@mui/material": "^5.10.11",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "mongodb": "^4.11.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router": "^6.4.2",
    "react-router-dom": "^6.4.2",
    "react-scripts": "5.0.1"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "set BROWSER=none&&react-scripts start",
    "build": "react-scripts build && electron-builder",
    "deploy": "react-scripts build && electron-builder --em.main=./electron.js --publish=always",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nf start -p 3000",
    "electron": "electron .",
    "electron-pack": "build --em.main=public/electron.js",
    "preelectron-pack": "yarn build"
  },
  "build": {
    "appId": "com.lambdasoftware.punto-de-venta",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "asar": true,
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^7.5.0",
    "cross-env": "^7.0.3",
    "electron": "^21.2.0",
    "electron-builder": "^23.6.0",
    "electron-is-dev": "^2.0.0",
    "foreman": "^3.0.1",
    "wait-on": "^6.0.1"
  }
}
